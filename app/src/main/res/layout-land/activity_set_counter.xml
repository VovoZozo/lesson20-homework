<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".SetCounterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editing_the_counter_text_view"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/set_counter"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/set_counter_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="@string/hint_enter_the_value"
            android:background="@drawable/edit_text_style"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="start"
            android:textSize="20sp"
            android:inputType="textAutoCorrect|textCapSentences" />

    </LinearLayout>

    <TextView
        android:id="@+id/counter_error_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="@color/design_default_color_error"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_set_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_set_counter"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>